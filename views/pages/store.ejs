<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a href="/">Trang chủ</a></li>
                    <li class="active"><%= name %></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <div class="container">
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">
                <% include ../partials/left-widget %>
            </div>
            <!-- /ASIDE -->

            <!-- STORE -->
            <div id="store" class="col-md-9">
                <!-- store top filter -->
                <div class="store-filter clearfix">
                    <div class="store-sort">
                        <label>
                            Sắp xếp theo:
                            <select class="input-select" onchange="location = this.value;">
                                <option value="?<%= filterStr %>" selected>Mới nhất</option>
                                <option value="?<%= filterStr %>sort=name-asc" <% if (sort == 'name-asc') { %> selected <% } %>>Tên (A -> Z)</option>
                                <option value="?<%= filterStr %>sort=name-des" <% if (sort == 'name-des') { %> selected <% } %>>Tên (Z -> A)</option>
                                <option value="?<%= filterStr %>sort=price-asc" <% if (sort == 'price-asc') { %> selected <% } %>>Giá (thấp -> cao)</option>
                                <option value="?<%= filterStr %>sort=price-des" <% if (sort == 'price-des') { %> selected <% } %>>Giá (cao -> thấp)</option>
                            </select>
                        </label>

                        <label>
                            Số sản phẩm mỗi trang:
                            <select class="input-select" onchange="location = this.value;">
                                <option value="?<%= filterStr %><%= sortStr %>count=12&page=1" <% if (count == 12) { %> selected <% } %>>12</option>
                                <option value="?<%= filterStr %><%= sortStr %>count=8&page=1" <% if (count == 8) { %> selected <% } %>>8</option>
                                <option value="?<%= filterStr %><%= sortStr %>count=4&page=1" <% if (count == 4) { %> selected <% } %>>4</option>
                            </select>
                        </label>
                    </div>
                    <ul class="store-grid">
                        <li class="active"><i class="fa fa-th"></i></li>
                        <li><a href="#"><i class="fa fa-th-list"></i></a></li>
                    </ul>
                </div>
                <!-- /store top filter -->

                <!-- store products -->
                <div class="row">
                    <% include ../partials/grid-products %>
                </div>
                <!-- /store products -->

                <!-- store bottom filter -->
                <div class="store-filter clearfix">
                    <span class="store-qty">Đang xem <%= count %>-<%= countAll %> sản phẩm</span>
                    <ul class="store-pagination">
                        <% for (;i <= countPage; i++) { %>
                        <li <% if (page == i) { %> class="active" <% } %>>
                            <a <% if (page != i) { %> href="?<%= filterStr %><%= sortStr %>count=<%= count %>&page=<%= i %>" <% } %> ><%= i %></a>
                        </li>
                        <% } %>
                        <!-- <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#"><i class="fa fa-angle-right"></i></a></li> -->
                    </ul>
                </div>
                <!-- /store bottom filter -->
            </div>
            <!-- /STORE -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->