<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <div class="col-md-7">
                <!-- Billing Details -->
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">Thông tin nhận hàng</h3>
                    </div>
                    <div class="form-group">
                        <h5> Họ tên:* </h5> 
                        <p> &emsp;&emsp;&emsp;<%=user.name%></p>
                        <br>
                    </div>
                    <div class="form-group">
                        <h5> Email:* </h5> 
                        <p> &emsp;&emsp;&emsp;<%=user.email%></p>
                        <br>
                    </div>
                    <div class="form-group">
                        <h5> Địa chỉ:* </h5> 
                        <p> &emsp;&emsp;&emsp;<%=user.address%></p>
                        <br>
                    </div>
                    <div class="form-group">
                        <h5> Số điện thoại:* </h5> 
                        <p> &emsp;&emsp;&emsp;<%=user.phone%></p>
                        <br>
                    </div>
                    <div class="order-notes">
                        <textarea class="input" placeholder="Ghi chú thêm"></textarea>
                    </div>
                </div>
                <!-- /Billing Details -->

                <!-- Order notes -->
                
                <!-- /Order notes -->
            </div>

            <!-- Order Details -->
            <div class="col-md-5 order-details">
                <div class="section-title text-center">
                    <h3 class="title">Đơn hàng</h3>
                </div>
                <div class="order-summary">
                    <div class="order-col">
                        <div><strong>SẢN PHẨM</strong></div>
                        <div><strong>TỔNG CỘNG</strong></div>
                    </div>
                    <div class="order-products">
                        <div class="order-col">
                            <div>1x Assassin's Creed: Origins</div>
                            <div>$980.00</div>
                        </div>
                        <div class="order-col">
                            <div>2x Battlefield 1</div>
                            <div>$980.00</div>
                        </div>
                    </div>
                    <div class="order-col">
                        <div>Phí giao hàng</div>
                        <div><strong>MIỄN PHÍ</strong></div>
                    </div>
                    <div class="order-col">
                        <div><strong>TỔNG CỘNG</strong></div>
                        <div><strong class="order-total">$2940.00</strong></div>
                    </div>
                </div>
                <h>Các hình thức thanh toán</h>
                <div class="payment-method">
                    <div class="input-radio">
                        <input type="radio" name="payment" id="payment-1">
                        <label for="payment-1">
                            <span></span>
                            Thẻ ATM nội địa/Internet Banking (Miễn phí thanh toán)
                        </label>
                    </div>
                    <div class="input-radio">
                        <input type="radio" name="payment" id="payment-2">
                        <label for="payment-2">
                            <span></span>
                            Thanh toán tiền mặt khi nhận hàng
                        </label>
                    </div>
                    <div class="input-radio">
                        <input type="radio" name="payment" id="payment-3">
                        <label for="payment-3">
                            <span></span>
                            Thanh toán bằng ví MoMo
                        </label>
                    </div>
                </div>
                <div class="input-checkbox">
                    <input type="checkbox" id="terms">
                    <label for="terms">
                        <span></span>
                        Tôi đã đọc và chấp nhận <a href="#">điều khoản & điều kiện</a>
                    </label>
                </div>
                <a href="#" class="primary-btn order-submit">Đặt hàng</a>
            </div>
            <!-- /Order Details -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

